  "components": {
    "schemas": {
      "ApiResponse_ExchangeInfoData": {
        "type": "object",
        "description": "Unified API response wrapper\n\nAll API responses follow this structure:\n- code: 0 = success, non-zero = error code\n- msg: short message description\n- data: actual data (success) or null (error)",
        "required": [
          "code",
          "msg"
        ],
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32",
            "description": "Response code: 0 for success, non-zero for errors",
            "example": 0
          },
          "data": {
            "type": "object",
            "description": "Exchange info response data",
            "required": [
              "assets",
              "symbols",
              "server_time"
            ],
            "properties": {
              "assets": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/AssetApiData"
                },
                "description": "All available assets"
              },
              "server_time": {
                "type": "integer",
                "format": "int64",
                "description": "Server timestamp in milliseconds",
                "example": 1703494800000,
                "minimum": 0
              },
              "symbols": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/SymbolApiData"
                },
                "description": "All trading pairs"
              }
            }
          },
          "msg": {
            "type": "string",
            "description": "Response message",
            "example": "ok"
          }
        }
      },
      "ApiResponse_Vec_AssetApiData": {
        "type": "object",
        "description": "Unified API response wrapper\n\nAll API responses follow this structure:\n- code: 0 = success, non-zero = error code\n- msg: short message description\n- data: actual data (success) or null (error)",
        "required": [
          "code",
          "msg"
        ],
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32",
            "description": "Response code: 0 for success, non-zero for errors",
            "example": 0
          },
          "data": {
            "type": "array",
            "items": {
              "type": "object",
              "description": "Asset API response data",
              "required": [
                "asset_id",
                "asset",
                "name",
                "decimals",
                "can_deposit",
                "can_withdraw",
                "can_trade"
              ],
              "properties": {
                "asset": {
                  "type": "string",
                  "description": "Asset symbol (e.g., BTC)",
                  "example": "BTC"
                },
                "asset_id": {
                  "type": "integer",
                  "format": "int32",
                  "description": "Asset ID",
                  "example": 1
                },
                "can_deposit": {
                  "type": "boolean",
                  "description": "Can deposit"
                },
                "can_trade": {
                  "type": "boolean",
                  "description": "Can trade"
                },
                "can_withdraw": {
                  "type": "boolean",
                  "description": "Can withdraw"
                },
                "decimals": {
                  "type": "integer",
                  "format": "int32",
                  "description": "Decimal precision",
                  "example": 8
                },
                "name": {
                  "type": "string",
                  "description": "Asset full name",
                  "example": "Bitcoin"
                }
              }
            }
          },
          "msg": {
            "type": "string",
            "description": "Response message",
            "example": "ok"
          }
        }
      },
      "ApiResponse_Vec_SymbolApiData": {
        "type": "object",
        "description": "Unified API response wrapper\n\nAll API responses follow this structure:\n- code: 0 = success, non-zero = error code\n- msg: short message description\n- data: actual data (success) or null (error)",
        "required": [
          "code",
          "msg"
        ],
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32",
            "description": "Response code: 0 for success, non-zero for errors",
            "example": 0
          },
          "data": {
            "type": "array",
            "items": {
              "type": "object",
              "description": "Symbol API response data",
              "required": [
                "symbol_id",
                "symbol",
                "base_asset",
                "quote_asset",
                "price_decimals",
                "qty_decimals",
                "is_tradable",
                "is_visible"
              ],
              "properties": {
                "base_asset": {
                  "type": "string",
                  "description": "Base asset symbol",
                  "example": "BTC"
                },
                "is_tradable": {
                  "type": "boolean",
                  "description": "Is trading enabled"
                },
                "is_visible": {
                  "type": "boolean",
                  "description": "Is visible in UI"
                },
                "price_decimals": {
                  "type": "integer",
                  "format": "int32",
                  "description": "Price decimal precision"
                },
                "qty_decimals": {
                  "type": "integer",
                  "format": "int32",
                  "description": "Quantity decimal precision"
                },
                "quote_asset": {
                  "type": "string",
                  "description": "Quote asset symbol",
                  "example": "USDT"
                },
                "symbol": {
                  "type": "string",
                  "description": "Symbol name (e.g., BTC_USDT)",
                  "example": "BTC_USDT"
                },
                "symbol_id": {
                  "type": "integer",
                  "format": "int32",
                  "description": "Symbol ID",
                  "example": 1
                }
              }
            }
          },
          "msg": {
            "type": "string",
            "description": "Response message",
            "example": "ok"
          }
        }
      },
      "AssetApiData": {
        "type": "object",
        "description": "Asset API response data",
        "required": [
          "asset_id",
          "asset",
          "name",
          "decimals",
          "can_deposit",
          "can_withdraw",
          "can_trade"
        ],
        "properties": {
          "asset": {
            "type": "string",
            "description": "Asset symbol (e.g., BTC)",
            "example": "BTC"
          },
          "asset_id": {
            "type": "integer",
            "format": "int32",
            "description": "Asset ID",
            "example": 1
          },
          "can_deposit": {
            "type": "boolean",
            "description": "Can deposit"
          },
          "can_trade": {
            "type": "boolean",
            "description": "Can trade"
          },
          "can_withdraw": {
            "type": "boolean",
            "description": "Can withdraw"
          },
          "decimals": {
            "type": "integer",
            "format": "int32",
            "description": "Decimal precision",
            "example": 8
          },
          "name": {
            "type": "string",
            "description": "Asset full name",
            "example": "Bitcoin"
          }
        }
      },
      "DepthApiData": {
        "type": "object",
        "description": "Market depth API response data",
        "required": [
          "symbol",
          "bids",
          "asks",
          "last_update_id"
        ],
        "properties": {
          "asks": {
            "type": "array",
            "items": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "description": "Ask levels [[price, qty], ...]",
            "example": [
              [
                "85001.00",
                "0.3"
              ],
              [
                "85002.00",
                "0.8"
              ]
            ]
          },
          "bids": {
            "type": "array",
            "items": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "description": "Bid levels [[price, qty], ...]",
            "example": [
              [
                "85000.00",
                "0.5"
              ],
              [
                "84999.00",
                "1.2"
              ]
            ]
          },
          "last_update_id": {
            "type": "integer",
            "format": "int64",
            "description": "Last update sequence ID",
            "example": 12345,
            "minimum": 0
          },
          "symbol": {
            "type": "string",
            "description": "Trading symbol name",
            "example": "BTC_USDT"
          }
        }
      },
      "ExchangeInfoData": {
        "type": "object",
        "description": "Exchange info response data",
        "required": [
          "assets",
          "symbols",
          "server_time"
        ],
        "properties": {
          "assets": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/AssetApiData"
            },
            "description": "All available assets"
          },
          "server_time": {
            "type": "integer",
            "format": "int64",
            "description": "Server timestamp in milliseconds",
            "example": 1703494800000,
            "minimum": 0
          },
          "symbols": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/SymbolApiData"
            },
            "description": "All trading pairs"
          }
        }
      },
      "HealthResponse": {
        "type": "object",
        "description": "Health check response data",
        "required": [
          "timestamp_ms"
        ],
        "properties": {
          "timestamp_ms": {
            "type": "integer",
            "format": "int64",
            "description": "Server timestamp in milliseconds",
            "example": 1703494800000,
            "minimum": 0
          }
        }
      },
      "SymbolApiData": {
        "type": "object",
        "description": "Symbol API response data",
        "required": [
          "symbol_id",
          "symbol",
          "base_asset",
          "quote_asset",
          "price_decimals",
          "qty_decimals",
          "is_tradable",
          "is_visible"
        ],
        "properties": {
          "base_asset": {
            "type": "string",
            "description": "Base asset symbol",
            "example": "BTC"
          },
          "is_tradable": {
            "type": "boolean",
            "description": "Is trading enabled"
          },
          "is_visible": {
            "type": "boolean",
            "description": "Is visible in UI"
          },
          "price_decimals": {
            "type": "integer",
            "format": "int32",
            "description": "Price decimal precision"
          },
          "qty_decimals": {
            "type": "integer",
            "format": "int32",
            "description": "Quantity decimal precision"
          },
          "quote_asset": {
            "type": "string",
            "description": "Quote asset symbol",
            "example": "USDT"
          },
          "symbol": {
            "type": "string",
            "description": "Symbol name (e.g., BTC_USDT)",
            "example": "BTC_USDT"
          },
          "symbol_id": {
            "type": "integer",
            "format": "int32",
            "description": "Symbol ID",
            "example": 1
          }
